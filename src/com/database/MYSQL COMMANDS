create database DBNIEC;
use DBNIEC;

CREATE TABLE STUDENT_CSE(S_ROLL VARCHAR(15),S_HEXCODE VARCHAR(8),S_NAME VARCHAR(30),S_PASSWORD VARCHAR(20),S_BRANCH VARCHAR(5),S_SECTION VARCHAR(5),S_SEMESTER VARCHAR(5),S_ADDRESS VARCHAR(80),S_PHONE VARCHAR(15),S_EMAIL VARCHAR(20),S_GENDER VARCHAR(10),S_OTHERFRIENDLIST VARCHAR(400),S_TEACHERLIST VARCHAR(400),S_PENDINGLIST VARCHAR(400),S_SENTLIST VARCHAR(400),S_ABOUTME VARCHAR(500),S_SOCIETY VARCHAR(400));
CREATE TABLE STUDENT_ECE(S_ROLL VARCHAR(15),S_HEXCODE VARCHAR(8),S_NAME VARCHAR(30),S_PASSWORD VARCHAR(20),S_BRANCH VARCHAR(5),S_SECTION VARCHAR(5),S_SEMESTER VARCHAR(5),S_ADDRESS VARCHAR(80),S_PHONE VARCHAR(15),S_EMAIL VARCHAR(20),S_GENDER VARCHAR(10),S_OTHERFRIENDLIST VARCHAR(400),S_TEACHERLIST VARCHAR(400),S_PENDINGLIST VARCHAR(400),S_SENTLIST VARCHAR(400),S_ABOUTME VARCHAR(500),S_SOCIETY VARCHAR(400));
CREATE TABLE STUDENT_EEE(S_ROLL VARCHAR(15),S_HEXCODE VARCHAR(8),S_NAME VARCHAR(30),S_PASSWORD VARCHAR(20),S_BRANCH VARCHAR(5),S_SECTION VARCHAR(5),S_SEMESTER VARCHAR(5),S_ADDRESS VARCHAR(80),S_PHONE VARCHAR(15),S_EMAIL VARCHAR(20),S_GENDER VARCHAR(10),S_OTHERFRIENDLIST VARCHAR(400),S_TEACHERLIST VARCHAR(400),S_PENDINGLIST VARCHAR(400),S_SENTLIST VARCHAR(400),S_ABOUTME VARCHAR(500),S_SOCIETY VARCHAR(400));
CREATE TABLE STUDENT_CIV(S_ROLL VARCHAR(15),S_HEXCODE VARCHAR(8),S_NAME VARCHAR(30),S_PASSWORD VARCHAR(20),S_BRANCH VARCHAR(5),S_SECTION VARCHAR(5),S_SEMESTER VARCHAR(5),S_ADDRESS VARCHAR(80),S_PHONE VARCHAR(15),S_EMAIL VARCHAR(20),S_GENDER VARCHAR(10),S_OTHERFRIENDLIST VARCHAR(400),S_TEACHERLIST VARCHAR(400),S_PENDINGLIST VARCHAR(400),S_SENTLIST VARCHAR(400),S_ABOUTME VARCHAR(500),S_SOCIETY VARCHAR(400));
CREATE TABLE STUDENT_MEC(S_ROLL VARCHAR(15),S_HEXCODE VARCHAR(8),S_NAME VARCHAR(30),S_PASSWORD VARCHAR(20),S_BRANCH VARCHAR(5),S_SECTION VARCHAR(5),S_SEMESTER VARCHAR(5),S_ADDRESS VARCHAR(80),S_PHONE VARCHAR(15),S_EMAIL VARCHAR(20),S_GENDER VARCHAR(10),S_OTHERFRIENDLIST VARCHAR(400),S_TEACHERLIST VARCHAR(400),S_PENDINGLIST VARCHAR(400),S_SENTLIST VARCHAR(400),S_ABOUTME VARCHAR(500),S_SOCIETY VARCHAR(400));
CREATE TABLE STUDENT_IT_(S_ROLL VARCHAR(15),S_HEXCODE VARCHAR(8),S_NAME VARCHAR(30),S_PASSWORD VARCHAR(20),S_BRANCH VARCHAR(5),S_SECTION VARCHAR(5),S_SEMESTER VARCHAR(5),S_ADDRESS VARCHAR(80),S_PHONE VARCHAR(15),S_EMAIL VARCHAR(20),S_GENDER VARCHAR(10),S_OTHERFRIENDLIST VARCHAR(400),S_TEACHERLIST VARCHAR(400),S_PENDINGLIST VARCHAR(400),S_SENTLIST VARCHAR(400),S_ABOUTME VARCHAR(500),S_SOCIETY VARCHAR(400));

CREATE TABLE NOTICE(ID INT AUTO_INCREMENT PRIMARY KEY,CONTENT VARCHAR(500),SENDER VARCHAR(50),RECEIVER VARCHAR(50),APPROVE VARCHAR(2));

CREATE TABLE TEACHER (T_ID VARCHAR(8),T_NAME VARCHAR(30),T_PASSWORD VARCHAR(30),T_BRANCH VARCHAR(5),T_PHONE VARCHAR(15),T_CLASSES VARCHAR(200),T_EMAIL VARCHAR(30),T_GENDER VARCHAR(10),T_STUDENTLIST TEXT(2000),T_TEACHERLIST TEXT(400),T_PENDINGLIST VARCHAR(400),T_SENTLIST VARCHAR(400),T_ABOUTME VARCHAR(400));

CREATE TABLE SOCIETY(ID INT AUTO_INCREMENT PRIMARY KEY,NAME VARCHAR(30),PASSWORD VARCHAR(30),MEMBERLIST VARCHAR(500),ABOUT VARCHAR(500),CONTACT VARCHAR(30),BRANCHLIST VARCHAR(500));

CREATE TABLE ACADEMICS_CSE(SEMESTER VARCHAR(5),SUBJECTS VARCHAR(300),SUBJECTCODES VARCHAR(60),PREVIOUSPPR VARCHAR(100),TEACHERS VARCHAR(50),SYLLABUS VARCHAR(100));
CREATE TABLE ACADEMICS_EEE(SEMESTER VARCHAR(5),SUBJECTS VARCHAR(300),SUBJECTCODES VARCHAR(60),PREVIOUSPPR VARCHAR(100),TEACHERS VARCHAR(50),SYLLABUS VARCHAR(100));
CREATE TABLE ACADEMICS_ECE(SEMESTER VARCHAR(5),SUBJECTS VARCHAR(300),SUBJECTCODES VARCHAR(60),PREVIOUSPPR VARCHAR(100),TEACHERS VARCHAR(50),SYLLABUS VARCHAR(100));
CREATE TABLE ACADEMICS_IT_(SEMESTER VARCHAR(5),SUBJECTS VARCHAR(300),SUBJECTCODES VARCHAR(60),PREVIOUSPPR VARCHAR(100),TEACHERS VARCHAR(50),SYLLABUS VARCHAR(100));
CREATE TABLE ACADEMICS_CIV(SEMESTER VARCHAR(5),SUBJECTS VARCHAR(300),SUBJECTCODES VARCHAR(60),PREVIOUSPPR VARCHAR(100),TEACHERS VARCHAR(50),SYLLABUS VARCHAR(100));
CREATE TABLE ACADEMICS_MEC(SEMESTER VARCHAR(5),SUBJECTS VARCHAR(300),SUBJECTCODES VARCHAR(60),PREVIOUSPPR VARCHAR(100),TEACHERS VARCHAR(50),SYLLABUS VARCHAR(100));

CREATE TABLE RESULT_CSE(ROLL VARCHAR(20), MARKS VARCHAR(200));
CREATE TABLE RESULT_ECE(ROLL VARCHAR(20), MARKS VARCHAR(200));
CREATE TABLE RESULT_EEE(ROLL VARCHAR(20), MARKS VARCHAR(200));
CREATE TABLE RESULT_IT_(ROLL VARCHAR(20), MARKS VARCHAR(200));
CREATE TABLE RESULT_CIV(ROLL VARCHAR(20), MARKS VARCHAR(200));
CREATE TABLE RESULT_MEC(ROLL VARCHAR(20), MARKS VARCHAR(200));
CREATE TABLE CLASSINFO(S_BRANCH VARCHAR(5),S_SECTION VARCHAR(5),S_CLASSFRIENDS VARCHAR(300));


alter table TEACHER add SNO int(5) auto_increment primary key;
select * from TEACHER;
alter table TEACHER auto_increment=100;
select SNO from TEACHER order by SNO desc limit 1;
alter table SOCIETY modify ID int(5) auto_increment;
alter table NOTICE modify ID int(5) auto_increment ;

drop table ACHIEVEMENT;
create table ACHIEVEMENT(ID int(5) auto_increment primary key,CONTENT varchar(500),SENDER varchar(20),STUDENT varchar(20),DATE1 DATE); 
insert into ACHIEVEMENT values (5,'hello','me','01215602714','2015/7/3');
delete from ACHIEVEMENT where DATE1 < date_sub(now(),interval 7 month);
select * from ACHIEVEMENT;
alter table CLASSINFO add primary key(S_BRANCH,S_SECTION);
alter table RESULT_CSE modify ROLL varchar(20) primary key ;


alter table STUDENT_CSE add CHATID varchar(50);
alter table STUDENT_ECE add CHATID varchar(50);
alter table STUDENT_EEE add CHATID varchar(50);
alter table STUDENT_CIV add CHATID varchar(50);
alter table STUDENT_IT_ add CHATID varchar(50);
alter table STUDENT_MEC add CHATID varchar(50);

create table CHAT_4 (MID int(10) auto_increment primary key,MESSAGE varchar(500),sender varchar(30),TIME DATETIME);
